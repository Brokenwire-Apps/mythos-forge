{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": ["es2015", "es2016", "es2017", "ES2020", "ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2022",
    "useDefineForClassFields": true
  },
  "include": ["./src/", "./prisma"],
  "exclude": ["node_modules", "dist", "lib"]
}
